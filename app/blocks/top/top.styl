.header__top
	background: #fff
	padding-bottom:70px
	.inner
		min-width:950px
.top
	background: #fff
	height: 70px;
	position: fixed
	display: table
	max-width: 1000px;
	min-width: 1000px;
	z-index:999

	&__wrapper
		display: table-row
	&__logo
		//float: left
		border-right:1px solid colorBg
		border-left:1px solid colorBg
		padding:10px  40px
		display: table-cell

		&-link
			display: block
			sprite $logo
		
	&__phones
		//float: left
		display: table-cell
		border-right:1px solid colorBg
		//padding: 0 40px 0 22px;
		vertical-align: middle;
		text-align: center
		width:37.5%
		vertical-align: middle;

		&:before
			content: ''
			display: inline-block
			//float: left
			vertical-align: middle;
			sprite $phone
			
		&-group
			//float: left
			display: inline-block
			padding: 0 12px;
			font-size: 16px;

		&-item
			//float: left
			display: inline-block

			&:last-child
				padding-left: 13px;

	&__login
		//float: left
		display: table-cell
		border-right:1px solid colorBg
		vertical-align: middle;
		cursor: pointer
		width: 13%;
		text-align: center;

		&-link
			margin-left: 11px;
			font-size: 16px;
			display: inline-block

		&:before
			content: ''
			display: inline-block
			sprite $login
			vertical-align: middle;

	&__cart
		display: table-cell
		//float: left
		border-right:1px solid colorBg
		vertical-align: middle;
		//padding: 0px 30px 0 22px;
		cursor: pointer
		transition: all 0.4s;
		width: 16.6%;
		text-align: center;

		&.active
			&:before
				sprite $cart2

			.top__cart-link
				color: #fff

		&:hover
			background: #e9e9e9;


		&-link
			padding-left: 22px;
			font-size: 16px;
			position: relative

		&:before
			content: ''
			//float: left
			display: inline-block
			vertical-align: middle;
			sprite $cart

		&-notice
			width: 20px
			height: 20px
			border-radius 9px
			background: colorMain
			color: #fff
			position: absolute;
			text-align: center;
			top: -11px;
			left: -10px;
			font-size: 14px;

	&__search
		//float: left
		display: table-cell
		vertical-align: middle;
		//padding: 0 29px;
		border-right:1px solid colorBg
		cursor: pointer
		transition: all 0.4s;
		text-align: center
		width:8%

		&:before
			content: ''
			sprite $search
			display: inline-block
			vertical-align: middle;

		&.active
			&:before
				sprite $search3

		&:hover
			background: #e9e9e9;