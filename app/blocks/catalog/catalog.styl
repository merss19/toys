	&__link
		padding: 1.6px 0
		display: inline-block
		padding-left: 17px;
		font-size:13px
		width: 89%;

		&:hover
			color: colorMark

	&__name
		padding-left: 41px;
		font-size: 13px;

	&__next
		sprite $rigth
		float: right
		position: relative;
		top: 6px;
		right: 4px;

	&__drop-list
		position: absolute;
		left: 280px;
		width: 280px
		top: 0
		height: 558px
		background: #fff
		display: none
		z-index: 2;
		padding: 5.5px 25px;
		border-right: 2px solid colorMark;

	&__drop-link
		padding-left:50px;
		display: block
		
		&:hover
			color: colorMark


	&__drop-item
