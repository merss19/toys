.header__top
	background: #fff
.top
	background: #fff
	height: 70px;
	position: relative
	&__logo
		float: left
		border-right:1px solid colorBg
		border-left:1px solid colorBg
		padding:10px 40px

		&-link
			display: block
			sprite $logo
		
	&__phones
		float: left
		border-right:1px solid colorBg
		padding:24px 19px

		&:before
			content: ''
			display: block
			float: left
			sprite $phone
			
		&-group
			float: left
			padding: 0 12px;
			font-size: 16px;

		&-item
			padding: 0 5px
			float: left

			&:last-child
				padding-left: 13px;

	&__login
		float: left
		border-right:1px solid colorBg
		padding: 24px 29px;
		cursor: pointer

		&-link
			margin-left: 17px;
			font-size: 16px;

		&:before
			content: ''
			float: left
			display: block
			sprite $login

	&__cart
		float: left
		border-right:1px solid colorBg
		padding: 24px 25px;
		cursor: pointer
		transition: all 0.4s;

		&.active
			&:before
				sprite $cart2

			.top__cart-link
				color: #fff

		&:hover
			background: #e9e9e9;


		&-link
			padding-left: 22px;
			font-size: 16px;
			position: relative

		&:before
			content: ''
			float: left
			display: block
			sprite $cart

		&-notice
			width: 20px
			height: 20px
			border-radius 9px
			background: colorMain
			color: #fff
			position: absolute;
			text-align: center;
			top: -11px;
			left: -10px;
			font-size: 14px;

	&__search
		float: left
		padding: 25px 30.7px 25px 29px;
		border-right:1px solid colorBg
		cursor: pointer
		transition: all 0.4s;

		&:before
			content: ''
			sprite $search
			display: block

		&.active
			&:before
				sprite $search3

		&:hover
			background: #e9e9e9;