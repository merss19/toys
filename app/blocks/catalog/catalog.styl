.catalog
	&__btn
		background: colorMark
		color: #fff;
		padding: 12px 12px;
		text-transform: uppercase;
		cursor: pointer;
		position: absolute;
		font-size: 17px;
		top: 192px;
		left: -44px;
		font-family:HNBold
		transform rotate(-90deg)
		z-index: 2;

		&:after
			content: ''
			display: block
			sprite $catalog
			position: absolute
			right: 21px;
			top: 20px;
			transform: rotate(90deg);

	&__circle
		background: #df6c15
		width:25px
		height:25px
		display: block;
		border-radius: 12px;
		float: right;
		margin-left: 7px;

	&__list
		background: #f9f9f9
		transition: all 0.4s
		padding: 2px 0 16px 0;
		position: absolute
		top:0
		left: -280px;
		z-index:3

	&__img
		padding-left: 11px;

	&__item
		padding: 6.4px 17px;
		width:280px
		cursor: pointer

		&:hover
			.catalog__next
				sprite $rigth2
			& > .catalog__drop-list
				display: block
			&:before
				sprite $smiling2

		&:before
			content: ''
			float: left
			top: 10px;
			sprite $smiling

		&:nth-child(2)
			&:before
				sprite $car

			&:hover
				&:before
					sprite $car2

		&:nth-child(3)
			&:before
				sprite $key

			&:hover
				&:before
					sprite $key2

		&:nth-child(4)
			&:before
				sprite $tricycle

			&:hover
				&:before
					sprite $tricycle2

		&:nth-child(5)
			&:before
				sprite $pencil

			&:hover
				&:before
					sprite $pencil2

		&:nth-child(6)
