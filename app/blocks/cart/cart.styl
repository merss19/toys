.cart
	padding: 12px 12px 2px 12px;

	&__products
		margin-top: 2px

	&__checkout
		float: right
		padding:15px 10px 0 10px

	&__sum
		float: left
		padding:4px 29px

		&-text
			float: left
			padding: 14px 13px;
			font-size: 17px;

		&-value
			float: left
			font-size:30px

	&__btn
		float: left
		text-align: center

		&-cart
			width: 156px;
			padding: 10px 11px;
			font-family:HNBold
			color: #fff;
			font-size: 18px;
			background: #f68026;
			border: none;
			text-transform: uppercase;
			margin: auto;
			cursor: pointer
.timeline
	&__item
		display: inline-block
		text-align: center
		width:33%
		padding:16px 12px
		position: relative

		&.active
			&:after
				border-top: 3px solid colorSecond

		&:after
			content: ''
			border-top: 3px solid #e9e9e9;
			position: absolute;
			left: 71px;
			top: 32px;
			display: block;
			width: 388px;

		&:nth-child(2)
			&:after
				left: 187px;
				top: -31px;
			.timeline__item-wrapper
				position: absolute;
				top: -47px;
				left: 127px;

		&:nth-child(3)
			&:after
				display: none
			.timeline__item-wrapper
				position: absolute;
				top: -47px;
				left: 241px;

	&__desc
		padding: 7px 0;
		width:75px

	&__step
		width: 37px
		height: 37px
		border-radius 30px
		margin-left: 16px;
		background: colorMain
		color: #fff
		text-align: center;
		line-height: 36px;


		&.active
			background: colorSecond

			&:before
				content: ''
				sprite $check
				display: block
				margin: auto;
				position: relative;
				top: 10px;


.list-products
	width:100%

	&__item
		border-top: 1px solid #f4f4f4

		&:last-child
			border-bottom:1px solid #f4f4f4

.select-product
	&__img
		width: 65px

	&__link
		cursor: pointer
		display: block

	td
		padding: 25px 9px;

		&:nth-child(2)
			width: 55.8%;

		&:nth-child(3)
			width: 20%;

	&__code
		color: #999

	&__input
		float: left
		border 1px solid #ddd
		padding:7px
		width: 41px;
		text-align: center;

	&__cross
		float: left
		padding: 9px 11px;
		font-size: 11px;
		color: #999

	&__price
		float: left;
		font-size: 18px;
		padding: 4px 0 0 2px;

	&__value
		padding: 0 12px;

	&__rate
		font-size: 11px;
		padding-left: 9px;
		color: #999