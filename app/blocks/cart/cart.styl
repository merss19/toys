.cart
	padding: 12px 12px 2px 12px;

	&__products
		margin-top: 2px

	&__checkout
		float: right
		padding:15px 10px 0 10px

	&-empty
		text-align: center
		padding: 20px;

		&__text
			font-size:22px

		&__link
			font-size: 22px
			color: colorMain
			text-decoration: underline

	&__sum
		float: left
		padding:4px 29px

		&-text
			float: left
			padding: 14px 13px;
			font-size: 17px;

		&-value
			float: left
			font-size:30px

	&__btn
		float: left
		text-align: center

		.btn-main
			width: 156px;
			padding: 8px 23px;
			font-family:HNBold
			font-size: 18px;
			text-transform: uppercase;
			margin: auto;
			display: block;

	&-two
		text-align: left
		padding:0 9px 0 12px
		
		&__title
			font-size: 16px
			text-align: center

		&__info
			margin-top: 20px

		&__btn
			margin:25px 0 18px 0

			.btn-main
				float: right
				width:auto
				padding: 9px 18px;
				font-size: 18px;
				font-family: HNBold
.timeline
	&__item
		display: inline-block
		text-align: center
		width:33%
		padding:16px 12px
		position: relative

	&__desc
		padding: 7px 0;
		width:75px

		&-two
			margin: auto;

		&-three
			margin: 0 75%

	&__step
		width: 37px
		height: 37px
		border-radius 30px
		margin-left: 16px;
		background: colorMain
		color: #fff
		text-align: center;
		line-height: 36px;

		&.active
			&:after
				border-top: 3px solid colorSecond

		&:after
			content: ''
			border-top: 3px solid #e9e9e9;
			position: absolute;
			left: 71px;
			top: 32px;
			display: block;
			width: 388px;


		&.active
			background: colorSecond

			&:before
				content: ''
				sprite $check
				display: block
				margin: auto;
				position: relative;
				top: 10px;

		&-two
			margin: auto;

			&:after
				left:187px

		&-three
			margin: 0 83%

			&:after
				display: none

	&__value
		&.active
			display: none


.list-products
	width:100%

	&__item
		border-top: 1px solid #f4f4f4

		&:last-child
			border-bottom:1px solid #f4f4f4

.select-product
	&__img
		width: 65px

	&__link
		cursor: pointer
		display: block

	&__desc
		text-align: left;
	td
		padding: 25px 9px;

		&:nth-child(2)
			width: 55.8%;

		&:nth-child(3)
			width: 20%;

	&__code
		color: #999

	&__input
		float: left
		border 1px solid #ddd
		padding:7px
		width: 41px;
		text-align: center;

	&__cross
		float: left
		padding: 9px 11px;
		font-size: 11px;
		color: #999

	&__price
		float: left;
		font-size: 18px;
		padding: 4px 0 0 2px;

	&__value
		padding: 0 12px;

	&__rate
		font-size: 11px;
		padding-left: 9px;
		color: #999



.order-info
	display: table
	&__item
		padding: 5px 0;
		display: table-row

	&__name
		font-family: HNBold
		display: table-cell
		padding: 8px 15px 8px 0;
		cursor: pointer

	&__value
		color: #777
		border: none
		border-bottom 1px solid #e9e9e9
		display: table-cell
		padding: 5px 0 5px 33px;

		&::-webkit-outer-spin-button
			-webkit-appearance: none;

		&::-webkit-inner-spin-button
			-webkit-appearance: none;
